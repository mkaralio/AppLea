<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     tools:context="com.example.commontask.NewPostActivity">


      <RelativeLayout
          android:id="@+id/relLayout1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <include layout="@layout/snippet_info" />
      </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:id="@+id/first"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relLayout1"
            android:textStyle="bold|normal"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="How do add a new post (log) in AppLea?"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:gravity="start"
          android:id="@+id/first_ans"
          android:layout_marginTop="10dp"
          android:layout_below="@+id/first"
          android:textStyle="normal"
          android:textSize="17dp"
          android:textColor="@color/black"
          android:text="You need to either tap on the desired date on the calendar interface or explicitly click the plus button (+) button at the bottom right of the display."/>



      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:gravity="start"
          android:id="@+id/second"
          android:layout_marginTop="10dp"
          android:layout_below="@+id/first_ans"
          android:textStyle="bold|normal"
          android:textSize="18dp"
          android:textColor="@color/black"
          android:text="How can I browse my log history?"/>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:gravity="start"
          android:id="@+id/second_ans"
          android:layout_marginTop="10dp"
          android:layout_below="@+id/second"
          android:textStyle="normal"
          android:textSize="17dp"
          android:textColor="@color/black"
          android:text="You need to click the (History) button at the menu at the bottom of the homepage."/>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:gravity="start"
          android:id="@+id/third"
          android:layout_marginTop="10dp"
          android:layout_below="@+id/second_ans"
          android:textStyle="bold|normal"
          android:textSize="18dp"
          android:textColor="@color/black"
          android:text="How can I view statistics about my farming activities?"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:gravity="start"
          android:id="@+id/third_ans"
          android:layout_marginTop="10dp"
          android:layout_below="@+id/third"
          android:textStyle="normal"
          android:textSize="17dp"
          android:textColor="@color/black"
          android:text="You need to click on the profile button at the menu at the bottom of the homepage.\nThen you need to choose (Statistics) button, which presents you with different ways to extract statistics information about
the personal farming activities over a chosen period of time."/>

  </RelativeLayout>


</ScrollView>