<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#00BFFF"
        android:minHeight="?android:attr/actionBarSize" />


    <RelativeLayout
        android:id="@+id/click1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BFFF">

        <com.github.zagum.expandicon.ExpandIconView
            android:id="@+id/expand_icon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="160dp"
            app:eiv_animationDuration="300"
            app:eiv_color="#000"
            app:eiv_colorLess="@color/colorPrimary"
            app:eiv_colorMore="@color/colorAccent"
            app:eiv_roundedCorners="false"
            app:eiv_switchColor="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Entries"
            android:textStyle="normal"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl2"
        android:layout_height="wrap_content">


        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch5"
            android:text="Dilution"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch6"
            android:text="Irrigation"
            android:layout_below="@+id/ch5"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch7"
            android:text="Fertilization"
            android:layout_below="@+id/ch6"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch8"
            android:text="Pruning"
            android:layout_below="@+id/ch7"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch9"
            android:text="Tillage"
            android:layout_below="@+id/ch8"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch10"
            android:text="Harvesting"
            android:layout_below="@+id/ch9"
            android:layout_height="wrap_content" />


        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch14"
            android:text="Spraying"
            android:layout_below="@+id/ch10"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch15"
            android:text="Barlery Farmer-Destroyer"
            android:layout_below="@+id/ch14"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch16"
            android:text="Buy Sprinkling"
            android:layout_below="@+id/ch15"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/ch17"
            android:text="Buy Manure"
            android:layout_below="@+id/ch16"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/click12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BFFF">

        <com.github.zagum.expandicon.ExpandIconView
            android:id="@+id/expand_icon21"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="160dp"
            app:eiv_animationDuration="300"
            app:eiv_color="#000"
            app:eiv_colorLess="@color/colorPrimary"
            app:eiv_colorMore="@color/colorAccent"
            app:eiv_roundedCorners="false"
            app:eiv_switchColor="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Time"
            android:textStyle="normal"/>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl21"
            android:layout_height="wrap_content">


            <CheckBox
                android:layout_width="match_parent"
                android:id="@+id/ch18"
                android:text="Day"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_width="match_parent"
                android:id="@+id/ch19"
                android:text="Weekend"
                android:layout_below="@+id/ch18"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_width="match_parent"
                android:id="@+id/ch20"
                android:text="Month"
                android:layout_below="@+id/ch19"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_width="match_parent"
                android:id="@+id/ch21"
                android:text="Year"
                android:layout_below="@+id/ch20"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_view_start_date"
            android:text="From Day"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            style="@style/Widget.AppTheme.EventEditView.TextView.Selectable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/text_view_end_date"
            android:text="To Day"
            android:ellipsize="end"
            android:layout_weight="0"
            android:layout_marginStart="30dp"
            style="@style/Widget.AppTheme.EventEditView.TextView.Selectable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/select"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:fabCustomSize="40dp"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_done" />

</LinearLayout>

</ScrollView>