<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.commontask.NewPostActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1">
            <include layout="@layout/snippet_posting_toolbar"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvDate"
            android:background="@color/grey"
            android:id="@+id/view10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field"
            android:textSize="18dp"
            android:textStyle="normal|italic"
            android:id="@+id/textView7"
            android:layout_below="@+id/view5"
           android:layout_marginStart="30dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textView7"
            android:background="@color/grey"
            android:id="@+id/view3" />
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view3"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Field"
            android:textSize="18dp"
            android:id="@+id/txtxorafi"
            android:textStyle="normal|italic"
            android:layout_below="@+id/spinner2"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txtxorafi"
            android:background="@color/grey"
            android:id="@+id/view4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Cultivation"
            android:textSize="18dp"
            android:textStyle="normal|italic"
            android:id="@+id/txtxoraf1i"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            android:layout_below="@+id/view4"
            android:layout_marginLeft="30dp" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtxoraf1i"
            android:layout_alignBottom="@+id/txtxoraf1i"
            android:layout_toEndOf="@+id/txtxoraf1i"
            android:layout_toRightOf="@+id/txtxoraf1i" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txtxoraf1i"
            android:background="@color/grey"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginStart="30dp"
            android:textStyle="normal|italic"
            android:id="@+id/txtkind"
            android:layout_below="@+id/txtxoraf1i"
            android:layout_marginLeft="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:textSize="18dp"
            android:textStyle="normal|italic"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            android:layout_below="@+id/txtkind"
            android:layout_marginLeft="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txtkind"
            android:background="@color/grey"
            android:id="@+id/view2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="normal|italic"
            android:layout_marginStart="30dp"
            android:id="@+id/txttask"
            android:layout_below="@+id/relLayout1"
            android:layout_marginLeft="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txttask"
            android:background="@color/grey"
            android:id="@+id/view7" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtkind">

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/discrete1"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_min="0"
                app:dsb_max="1000"
                app:dsb_value="-2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtseek"
                android:layout_below="@+id/discrete1"
                />


        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_marginStart="30dp"
            android:id="@+id/txttaskharve"
            android:text="Harvesting Type"
            android:layout_below="@+id/frame"
            android:layout_marginLeft="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txttask"
            android:background="@color/grey"
            android:id="@+id/view71" />


        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/spinner51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtxoraf1i"
            android:layout_below="@+id/txttaskharve"
            android:layout_marginTop="10dp"
            android:hint="Type"
            android:textStyle="normal"
            android:layout_alignLeft="@+id/txtxoraf1i" />

        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/spinner5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtxoraf1i"
            android:layout_below="@+id/spinner51"
            android:layout_marginTop="30dp"
            android:hint="Unit amount"
            android:textStyle="normal"
            android:layout_alignLeft="@+id/txtxoraf1i" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab"/>



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_below="@+id/spinner5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day"
            android:id="@+id/tvDate"
            android:textSize="18dp"
            android:textStyle="normal|italic"
            android:layout_below="@+id/view7"
           android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvDate"
            android:background="@color/grey"
            android:id="@+id/view6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginStart="30dp"
            android:id="@+id/textView4"
            android:textStyle="normal|italic"
            android:layout_below="@+id/view10"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/tvTime"
            android:textSize="18dp"
            android:textStyle="normal|italic"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/view10"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvTime"
            android:background="@color/grey"
            android:id="@+id/view9" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="normal|italic"
            android:layout_marginStart="30dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/tvTime"
            android:layout_marginLeft="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textView5"
            android:background="@color/grey"
            android:id="@+id/view5" />

    </RelativeLayout>
</ScrollView>