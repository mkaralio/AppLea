<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="378dp"
        android:layout_height="match_parent"
        android:background="@color/material_animations_accent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/farmer" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="144dp"
            android:text="Time"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/naming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="124dp"
            android:textSize="20sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="123dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titlepost"
            android:layout_marginTop="113dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/titleposting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlepost"
            android:lines="1"
            android:paddingTop="5dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/namepost"
            android:layout_marginTop="173dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlepost"
            android:text="Name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/nameposting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namepost"
            android:lines="1"
            android:paddingTop="5dp"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/databasepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleposting"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="240dp"
            android:text="Post"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/posteddatabase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/databasepost"
            android:lines="10"
            android:textSize="20sp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>