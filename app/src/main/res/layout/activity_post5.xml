<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarStyle="insideOverlay"
        tools:context="com.example.commontask.NewPostActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1">
            <include layout="@layout/snippet_posting_toolbar"/>
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvDate"
            android:background="@color/grey"
            android:id="@+id/view10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field"
            android:textSize="18sp"
            android:id="@+id/textView7"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/view5"
            android:textStyle="normal|italic"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textView7"
            android:background="@color/grey"
            android:id="@+id/view3" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view3"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Επιλέξτε ενα χωράφι"
            android:textSize="18sp"
            android:layout_marginStart="30dp"
            android:id="@+id/txtxorafi"
            android:textStyle="normal|italic"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txtxorafi"
            android:background="@color/grey"
            android:id="@+id/view4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kind"
            android:textSize="18sp"
            android:layout_marginStart="30dp"
            android:textStyle="normal|italic"
            android:id="@+id/txtxoraf1i"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/view4"
            android:layout_marginLeft="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txtxoraf1i"
            android:background="@color/grey"/>

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtxoraf1i"
            android:layout_alignBottom="@+id/txtxoraf1i"
            android:layout_toEndOf="@+id/txtxoraf1i"
            android:layout_toRightOf="@+id/txtxoraf1i" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:id="@+id/txtkind"
            android:textStyle="normal|italic"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/txtxoraf1i"
            android:layout_marginLeft="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txtkind"
            android:background="@color/grey"
            android:id="@+id/view2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/txttask"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/relLayout1"
            android:layout_marginLeft="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/txttask"
            android:background="@color/grey"
            android:id="@+id/view7" />



        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_below="@+id/txtkind"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day"
            android:id="@+id/tvDate"
            android:textSize="18dp"
            android:textStyle="normal|italic"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/view7"
            android:layout_marginLeft="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvDate"
            android:background="@color/grey"
            android:id="@+id/view6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="normal|italic"
            android:layout_marginStart="30dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/view10"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/tvTime"
            android:layout_marginStart="30dp"
            android:textStyle="normal|italic"
            android:textSize="18dp"
            android:layout_below="@+id/view10"
            android:layout_alignParentStart="true"
            android:layout_marginTop="59dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp" />



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvTime"
            android:background="@color/grey"
            android:id="@+id/view8" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginStart="30dp"
            android:id="@+id/textView5"
            android:textStyle="normal|italic"
            android:layout_below="@+id/tvTime"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textView5"
            android:background="@color/grey"
            android:id="@+id/view5" />



    </RelativeLayout>
</ScrollView>