<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_setting_forecast.root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <Switch
        android:id="@+id/widget_setting_forecast.day_name_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat"
        android:switchTextAppearance="@style/WidgetOptionSwitch"
        android:text="@string/widget_setting_forecast_day_name_style"
        android:padding="@dimen/cardview_margin"
        app:showText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat"
        android:text="@string/widget_setting_forecast_days"
        android:labelFor="@+id/widget_setting_forecast.number_of_days_hours"/>
    <Spinner
        android:id="@+id/widget_setting_forecast.number_of_days_hours"
        android:theme="@style/Theme.AppCompat"
        android:layout_width="fill_parent"
        android:padding="@dimen/cardview_margin"
        android:layout_height="wrap_content"/>
</LinearLayout>