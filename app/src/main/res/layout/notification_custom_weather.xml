<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/notification_custom_weather.widget_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/notification_custom_weather.header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/notification_padding">
        <TextView
            android:id="@+id/notification_custom_weather.widget_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="2"
            android:paddingEnd="@dimen/notification_padding"
            android:paddingLeft="@dimen/notification_padding"
            android:paddingRight="@dimen/notification_padding"
            android:paddingStart="@dimen/notification_padding"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/notification_custom_weather.widget_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ellipsize="end"
            android:paddingRight="@dimen/notification_padding"
            android:paddingEnd="@dimen/notification_padding"
            android:lines="1"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/notification_custom_weather.widget_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="@dimen/notification_padding"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/notification_custom_weather.widget_second_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="@dimen/notification_padding"
            android:paddingRight="@dimen/notification_weather_description_padding"
            android:textColor="@android:color/black"/>
        <ImageView
            android:id="@+id/notification_custom_weather.widget_icon"
            android:layout_width="@dimen/notification_icon_size"
            android:layout_height="@dimen/notification_icon_size"
            android:scaleType="fitXY"
            android:contentDescription="@string/widget_weather_icon_description"/>
        <TextView
            android:id="@+id/notification_custom_weather.widget_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="right"
            android:lines="2"
            android:paddingLeft="@dimen/notification_weather_description_padding"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>
